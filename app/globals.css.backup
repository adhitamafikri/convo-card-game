@import "tailwindcss";

/* ============================================
   Typography
   ============================================ */
body {
  font-family: var(--font-heading), -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-heading), -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  font-weight: 700;
}

.font-accent {
  font-family: var(--font-accent), Georgia, serif;
}

/**
 * Obrolan Card Game Theme Configuration
 * Vibrant, warm, energetic color palette
 */

/* ============================================
   DaisyUI Theme Configuration
   ============================================ */
[data-theme="obrolan"] {
  /* DaisyUI Color Variables - Vibrant Theme */
  --p: 38 100% 59%;       /* Primary - Warm Gold #ffba32 */
  --pc: 0 0% 10%;         /* Primary Content - Dark */
  --s: 16 77% 61%;        /* Secondary - Terracotta Dream #e8734e */
  --sc: 0 0% 100%;        /* Secondary Content - White */
  --a: 12 85% 55%;        /* Accent - Burnt Orange #d9551e */
  --ac: 0 0% 100%;        /* Accent Content - White */
  --n: 220 13% 18%;       /* Neutral - Navy Gray #282c34 */
  --nc: 0 0% 100%;        /* Neutral Content - White */
  --b1: 38 100% 59%;      /* Base 100 - Warm Gold (main bg) */
  --b2: 0 0% 98%;         /* Base 200 - White for cards */
  --b3: 0 0% 95%;         /* Base 300 - Light gray */
  --bc: 220 13% 18%;      /* Base Content - Dark navy */
  --in: 217 91% 60%;      /* Info - Blue */
  --su: 142 76% 45%;      /* Success - Green */
  --wa: 38 100% 59%;      /* Warning - Warm Gold */
  --er: 12 85% 55%;       /* Error - Burnt Orange */

  /* Border radius */
  --rounded-box: 1.5rem;
  --rounded-btn: 0.75rem;
  --rounded-badge: 1.9rem;

  /* Animations */
  --animation-btn: 0.25s;
  --animation-input: 0.2s;
}

/* Also set as default in :root */
:root {
  /* DaisyUI Color Variables */
  --p: 38 100% 59%;
  --pc: 0 0% 10%;
  --s: 16 77% 61%;
  --sc: 0 0% 100%;
  --a: 12 85% 55%;
  --ac: 0 0% 100%;
  --n: 220 13% 18%;
  --nc: 0 0% 100%;
  --b1: 38 100% 59%;
  --b2: 0 0% 98%;
  --b3: 0 0% 95%;
  --bc: 220 13% 18%;
  --in: 217 91% 60%;
  --su: 142 76% 45%;
  --wa: 38 100% 59%;
  --er: 12 85% 55%;
  --rounded-box: 1.5rem;
  --rounded-btn: 0.75rem;
  --rounded-badge: 1.9rem;
  --animation-btn: 0.25s;
  --animation-input: 0.2s;

  /* Custom Color Variables (for custom usage) */
  --color-primary: #ffba32;
  --color-primary-dark: #e6a51f;
  --color-primary-light: #ffc957;
  --color-secondary: #e8734e;
  --color-secondary-dark: #d45e37;
  --color-secondary-light: #ff8f6a;
  --color-accent: #d9551e;
  --color-accent-dark: #b84418;
  --color-accent-light: #ff6b3d;
  --color-text-primary: #282c34;
  --color-text-secondary: #e8734e;
  --color-text-muted: #64676d;

  /* Gradient backgrounds */
  --gradient-from: 255 186 50;
  --gradient-via: 232 115 78;
  --gradient-to: 217 85 30;
  --gradient-fire-from: 255 186 50;
  --gradient-fire-via: 232 115 78;
  --gradient-fire-to: 217 85 30;
}

@plugin "daisyui";

/* ============================================
   Gradient Utilities
   ============================================ */

/* Main solid background - Warm Golden */
.bg-gradient-game {
  background: #ffba32;
}

/* Alternative gradient - Fire Wave */
.bg-gradient-fire {
  background: linear-gradient(
    135deg,
    rgb(var(--gradient-fire-from)) 0%,
    rgb(var(--gradient-fire-via)) 50%,
    rgb(var(--gradient-fire-to)) 100%
  );
}

/* Subtle gradient for cards */
.bg-gradient-subtle {
  background: linear-gradient(
    135deg,
    rgb(255 254 249) 0%,
    rgb(255 248 235) 100%
  );
}

/* Gradient for buttons and interactive elements */
.bg-gradient-interactive {
  background: linear-gradient(
    135deg,
    rgb(255 186 50) 0%,
    rgb(232 115 78) 100%
  );
}

/* ============================================
   Custom Animations
   ============================================ */

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 0.4s ease-out;
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-slide-up {
  animation: slide-up 0.5s ease-out;
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(255, 186, 50, 0.4);
  }
  50% {
    box-shadow: 0 0 20px 10px rgba(255, 186, 50, 0.2);
  }
}

.animate-pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

/* ============================================
   Component Utilities
   ============================================ */

/* Card hover effects */
.card-hover {
  transition: all 0.3s ease;
}

.card-hover:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 24px rgba(255, 186, 50, 0.25),
              0 6px 12px rgba(232, 115, 78, 0.15);
}

/* Button gradient hover */
.btn-gradient {
  background: linear-gradient(135deg, #ffba32 0%, #e8734e 100%);
  border: none;
  color: #1a0f0a;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-gradient:hover {
  background: linear-gradient(135deg, #e6a51f 0%, #d45e37 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(255, 186, 50, 0.3);
}

/* Glass morphism effect */
.glass-effect {
  background: rgba(255, 254, 249, 0.85);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 186, 50, 0.2);
}

/* Warm shadow */
.shadow-warm {
  box-shadow: 0 4px 12px rgba(255, 186, 50, 0.15),
              0 2px 6px rgba(232, 115, 78, 0.1);
}

.shadow-warm-lg {
  box-shadow: 0 10px 30px rgba(255, 186, 50, 0.2),
              0 5px 15px rgba(232, 115, 78, 0.15);
}

/* ============================================
   Accessibility & UX
   ============================================ */

/* Focus visible styles */
*:focus-visible {
  outline: 3px solid rgb(255 186 50);
  outline-offset: 3px;
  border-radius: 4px;
}

/* Remove default focus outline (we use :focus-visible instead) */
*:focus:not(:focus-visible) {
  outline: none;
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}

/* Selection color */
::selection {
  background-color: rgba(255, 186, 50, 0.3);
  color: #1a0f0a;
}

/* ============================================
   Loading States
   ============================================ */

.loading-spinner {
  border: 3px solid rgba(255, 186, 50, 0.2);
  border-top-color: #ffba32;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ============================================
   Responsive Utilities
   ============================================ */

/* Ensure touch targets are large enough on mobile */
@media (max-width: 768px) {
  .btn {
    min-height: 44px;
    min-width: 44px;
  }

  input,
  select,
  textarea {
    min-height: 44px;
  }
}
